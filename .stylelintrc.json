{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "selector-class-pattern": "^[a-z][a-zA-Z0-9_-]*$",
    "custom-property-pattern": "^[a-z][a-zA-Z0-9_-]*$",
    "value-no-vendor-prefix": null,
    "property-no-vendor-prefix": null
  },
  "ignoreFiles": ["**/*.js", "**/*.ts", "**/*.tsx", "node_modules/**"]
}
